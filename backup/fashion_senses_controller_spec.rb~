require 'spec_helper'

describe FashionSensesController do

  def valid_attributes
    {'nome' => 'nome_teste', 'email' => 'email_teste', 'ddd' => 11, 'telefone' => 1234567, 'blog' => 'http://www.blog.com.br'}
  end

  describe "GET index" do
    it "assigns a new blogger to @blogger and 'cadastro' to @content" do
      get :index
      assigns(:content).should eq('cadastro')
    end
  end

  describe "POST create" do
    describe "with valid params" do
      it "creates a new FashionSense user" do
        expect {
          post :create, :blogueiro => valid_attributes
        }.to change(FashionSense, :count).by(1)
      end


      it "assigns a newly created blogger as @blogger" do
        post :create, :blogueiro => valid_attributes
        assigns(:blogger).should be_a(FashionSense)
        assigns(:blogger).should be_persisted
      end
    end


    describe "with invalid params" do
      it "assigns a newly created but unsaved blogger as @blogger" do
        # Trigger the behavior that occurs when invalid params are submitted
        FashionSense.any_instance.stub(:save).and_return(false)
        post :create, :blogueiro => {}
        assigns(:blogger).should be_a_new(FashionSense)
      end

      it "re-renders the 'new' template" do
        # Trigger the behavior that occurs when invalid params are submitted
        FashionSense.any_instance.stub(:save).and_return(false)
        post :create, :blogueiro => {}
        response.should render_template("fashion_senses/index")
      end

    end
  end

  describe "GET recomment" do
    it "recommend" do
      get :recommend
      assigns(:content).should eq('sucesso')
    end
  end
end
