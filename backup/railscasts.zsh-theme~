# ZSH Theme - Preview: http://gyazo.com/8becc8a7ed5ab54a0262a470555c3eed.png
ZSH_THEME_GIT_PROMPT_PREFIX="%{$terminfo[bold]$fg[white]%}["
ZSH_THEME_GIT_PROMPT_SUFFIX="%{$terminfo[bold]$fg[white]%}]"
ZSH_THEME_GIT_PROMPT_DIRTY="%{$terminfo[bold]$fg[green]%}✚"
ZSH_THEME_GIT_PROMPT_CLEAN=""
ZSH_THEME_GIT_PROMPT_ADDED="✚"
ZSH_THEME_GIT_PROMPT_MODIFIED="✹"
ZSH_THEME_GIT_PROMPT_DELETED="%{$terminfo[bold]$fg[red]%}✖"
ZSH_THEME_GIT_PROMPT_RENAMED="➜"
ZSH_THEME_GIT_PROMPT_UNMERGED="═"
ZSH_THEME_GIT_PROMPT_UNTRACKED="%{$terminfo[bold]$fg[green]%}✚"

local return_code="%(?..%{$fg[red]%}%? ↵%{$reset_color%})"
local user_host='%{$terminfo[bold]$fg[blue]%}%n'
local current_dir='%{$terminfo[bold]$fg[red]%} %~%{$reset_color%}'
local rvm_ruby='%{$terminfo[bold]$fg[green]%}$(~/.rvm/bin/rvm-prompt i v g s)'

if which rvm-prompt &> /dev/null; then
  rvm_ruby='%{$fg[red]%}‹$(rvm-prompt i v g›%{$reset_color%}'
else
  if which rbenv &> /dev/null; then
    rvm_ruby='%{$fg[red]%}‹$(rbenv version | sed -e "s/ (set.*$//")›%{$reset_color%}'
  fi
fi
local git_branch='$(git_prompt_info)%{$reset_color%}'

PROMPT="╭─${user_host} ${current_dir} ${rvm_ruby} %{$fg[yellow]%}${git_branch}
╰─%B$%b "
#PROMPT="${user_host} ${current_dir} ${rvm_ruby} %{$fg[yellow]%}${git_branch}
#%B$%b "

RPS1="${return_code}"

